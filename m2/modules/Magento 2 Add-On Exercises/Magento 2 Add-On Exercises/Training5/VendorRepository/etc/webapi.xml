<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../app/code/Magento/Webapi/etc/webapi.xsd">

    <!-- Example: curl http://127.0.0.1/index.php/rest/V1/vendor/load/1 -->
    <route url="/V1/vendor/load/:vendorId" method="GET">
        <service class="Training5\VendorRepository\Api\VendorInterface" method="loadvendor"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    
    <route url="/V1/vendor/save/:vendorName" method="GET">
        <service class="Training5\VendorRepository\Api\VendorInterface" method="save"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
	 <route url="/V1/vendor/getList" method="GET">
        <service class="Training5\VendorRepository\Api\VendorInterface" method="getList"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
  <!-- Example: curl -d '{"vendorId":[1]}' -H 'Content-Type: application/json' http://127.0.0.1/index.php/rest/V1/vendor/getAssociatedProductcIds -->
    
    <route url="/V1/vendor/getAssociatedProductcIds/:vendorName" method="GET">
        <service class="Training5\VendorRepository\Api\VendorInterface" method="getAssociatedProductcIds"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    
</routes>